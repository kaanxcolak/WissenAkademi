@model ICollection<MemberViewModel>
@{
    ViewData["Title"] = "MemberIndex";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sistemdeki Tüm Üyeler</h1>

<!-- USERS LIST -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Üye Bilgileri</h3>

        <div class="card-tools">
            <span class="badge badge-danger">@Model.Count Üye</span>
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <ul class="users-list clearfix">
            @foreach (var item in Model)
            {
                <li>
                    <img src="~/AdminLTE/dist/img/user1-128x128.jpg" alt="User Image">
                    <a class="users-list-name" href="#">@item.Name @item.Surname.ToUpper()</a>
                    <span class="users-list-date">
                        @{
                            TimeSpan span = new TimeSpan();
                            span = DateTime.Now - item.CreatedDate;
                            (span.TotalDays / 365).ToString();
                        } gündür üye
                        
                        </span>
                </li>
            }


        </ul>
        <!-- /.users-list -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer text-center">
        <a href="javascript::">View All Users</a>
    </div>
    <!-- /.card-footer -->
</div>
<!--/.card -->